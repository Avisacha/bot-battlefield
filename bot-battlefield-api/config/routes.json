{
  "authorization_allow": {
    "path": "/.*",
    "action": "Api\\Controller\\AuthorizationController::allow",
    "methods": [
      "OPTIONS"
    ]
  },
  "player_show": {
    "path": "/players/([a-z@-Z\\dxC0-\\xFF_\\-]{3,16})",
    "action": "Api\\Controller\\PlayersController::showByOne",
    "methods": [
      "GET"
    ]
  },
  "player_show_all": {
    "path": "/players(.*)",
    "action": "Api\\Controller\\PlayersController::showAll",
    "methods": [
      "GET"
    ]
  },
  "player_create_": {
    "path": "/players",
    "action": "Api\\Controller\\PlayersController::create",
    "methods": [
      "POST"
    ]
  },
  "opponents_show": {
    "path": "/opponents",
    "action": "Api\\Controller\\OpponentsController::show",
    "methods": [
      "GET"
    ]
  }
}
